@{
    // Contact Labels
    var contactInfoHeaderLabel = Html.Sitecore().Field("Contact Information Header", Html.Sitecore().CurrentItem.Children["Billing"]);
    var emailAddressLabel = Html.Sitecore().Field("Email Address Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var confirmEmailAddressLabel = Html.Sitecore().Field("Confirm Email Address Label", Html.Sitecore().CurrentItem.Children["Billing"]);

    //Credit Card Labels
    var paymentOptionsHeaderLabel = Html.Sitecore().Field("Payment Options Header", Html.Sitecore().CurrentItem.Children["Billing"]);
    var nameOnCardLabel = Html.Sitecore().Field("Name on Card Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var cardNumberLabel = Html.Sitecore().Field("Card Number Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var expirationDateLabel = Html.Sitecore().Field("Expiration Date Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var expirationYearLabel = Html.Sitecore().Field("Expiration Year Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var ccidLabel = Html.Sitecore().Field("CCID Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    
    //Billing Labels
    var billingAddressHeaderLabel = Html.Sitecore().Field("Billing Address Header", Html.Sitecore().CurrentItem.Children["Billing"]);
    var billingNameLabel = Html.Sitecore().Field("Billing Name Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var addressLabel = Html.Sitecore().Field("Address Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var cityLabel = Html.Sitecore().Field("City Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var zipCodeLabel = Html.Sitecore().Field("Zipcode Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var countryLabel = Html.Sitecore().Field("Country Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var stateLabel = Html.Sitecore().Field("State Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var paypalPassword = Html.Sitecore().Field("Paypal Password", Html.Sitecore().CurrentItem.Children["Billing"]);
    var signinLabel = Html.Sitecore().Field("SignIn Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var sameAsShipping = Html.Sitecore().Field("Same Shipping Address", Html.Sitecore().CurrentItem.Children["Billing"]);
    
    // Loyalty & Giftcards Labels
    var promocardsHeaderLabel = Html.Sitecore().Field("Promo Cards Header", Html.Sitecore().CurrentItem.Children["Billing"]);
    var applyGiftLabel = Html.Sitecore().Field("Apply Gift Card Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var subtitleGiftLabel = Html.Sitecore().Field("Subtitle Gift Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var paymentAmountLabel = Html.Sitecore().Field("Payment Amount Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var getBalanceButtonLabel = Html.Sitecore().Field("Get Balance Button Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var applyFullAmountButtonLabel = Html.Sitecore().Field("Apply Amount Button Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var addGiftCardButtonLabel = Html.Sitecore().Field("Add Gift Card Button Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var giftCardLabel = Html.Sitecore().Field("Gift Card Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var removeLabel = Html.Sitecore().Field("Remove Label", Html.Sitecore().CurrentItem.Children["Billing"]);

    var applyDiscountsLabel = Html.Sitecore().Field("Apply Discount Credit Label", Html.Sitecore().CurrentItem.Children["Confirm"]);
    var subtitleDiscountLabel = Html.Sitecore().Field("Subtitle Discount Credit Label", Html.Sitecore().CurrentItem.Children["Confirm"]);
    var promotionCodeLabel = Html.Sitecore().Field("Promotion Code Label", Html.Sitecore().CurrentItem.Children["Confirm"]);
    var addPromoCodeLabel = Html.Sitecore().Field("Add Promo Code Label", Html.Sitecore().CurrentItem.Children["Confirm"]);
    
    var applyLoyaltyLabel = Html.Sitecore().Field("Apply Loyalty Card Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var subtitleLoyaltyLabel = Html.Sitecore().Field("Subtitle Loyalty Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var addLoyaltyCardButtonLabel = Html.Sitecore().Field("Add Loyalty Card Button Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var loyaltyCardLabel = Html.Sitecore().Field("Loyalty Card Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    
    // Payment Information Labels
    var paymentInfoHeaderLabel = Html.Sitecore().Field("Payment Info Header", Html.Sitecore().CurrentItem.Children["Billing"]);
    var paymentTotalLabel = Html.Sitecore().Field("Payment Total Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var taxesLabel = Html.Sitecore().Field("Taxes Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var savingsLabel = Html.Sitecore().Field("Savings Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var totalLabel = Html.Sitecore().Field("Total Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var chooseMethodLabel = Html.Sitecore().Field("Choose Payment Method Label", Html.Sitecore().CurrentItem.Children["Billing"]);
   
    var creditCardLabel = Html.Sitecore().Field("Credit Card Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var orderInformationLabel = Html.Sitecore().Field("Order Information Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var subtotalLabel = Html.Sitecore().Field("Subtotal Label", Html.Sitecore().CurrentItem.Children["Billing"]);
    var shippingCostLabel = Html.Sitecore().Field("Shipping Cost Label", Html.Sitecore().CurrentItem.Children["Billing"]);

    
    }
<div id="PleaseEnterANewIdNameHere" class="wrap-content-checkout">
    <div class="col-md-12"><h3>@contactInfoHeaderLabel</h3></div>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label for="BillingInput-Email">@emailAddressLabel</label>
                    <input type="text" class="form-control" id="BillingInput-Email" placeholder="@emailAddressLabel">
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label for="BillingInput-ConfirmEmail">@confirmEmailAddressLabel</label>
                    <input type="text" class="form-control" id="BillingInput-ConfirmEmail" placeholder="@confirmEmailAddressLabel">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="col-md-12"><h3>@paymentOptionsHeaderLabel</h3></div>
            <div class="col-md-12" data-bind="visible:payCard">
                <div class="payment">
                    <!-- Payment methods -->
                    <select id="PaymentMethods" title="@chooseMethodLabel" class="form-control" data-bind="options: paymentMethods, optionsText:'Description', optionsValue:'ExternalId'"></select>
                </div>
            </div>
            <!-- PAYMENT METHODS STARTS HERE -->
            <div class="col-md-12" data-bind="visible:payCard">
                <!-- Creditcards -->
                <div class="show-hide-payment" id="PaymentMethod">
                    <div class="show-payment">
                        <div class="form-group">
                            <label for="creditCardPayment_CustomerNameOnPayment">@nameOnCardLabel</label>
                            <input type="text" class="form-control" id="creditCardPayment_CustomerNameOnPayment" placeholder="@nameOnCardLabel" disabled>
                        </div>
                    </div>
                    <div class="show-payment">
                        <div class="form-group">
                            <label for="creditCardPayment_CreditCardNumber">@cardNumberLabel</label>
                            <input type="text" class="form-control" id="creditCardPayment_CreditCardNumber" placeholder="@cardNumberLabel" disabled>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="show-payment">
                                <div class="form-group">
                                    <label for="creditCardPayment_ExpirationMonth">@expirationDateLabel</label>
                                    <select id="creditCardPayment_ExpirationMonth" class="form-control" data-bind="options: expirationDates, optionsName:'Name', optionsValue:'Value'" disabled></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="show-payment">
                                <div class="form-group">
                                    <label for="creditCardPayment_ExpirationYear">@expirationYearLabel</label>
                                    <select id="creditCardPayment_ExpirationYear" class="form-control" data-bind="options: expirationYears, optionsName:'Year', optionsValue:'Value'" disabled></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="show-payment">
                        <div class="form-group">
                            <label for="creditCardPayment_ValidationCode">@ccidLabel</label>
                            <input type="text" class="form-control" id="creditCardPayment_ValidationCode" placeholder="@ccidLabel" disabled>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-12"><h3>@billingAddressHeaderLabel</h3></div>
            <div class="col-md-12">
                <div class="billing">
                    <select id="BillingAddressSelect" class="form-control" data-bind="options: userAddresses, optionsText:'street', optionsValue:'id', value:'UseOther'" title="@sameAsShipping"></select>
                </div>
            </div>
            <!-- BILLING ADDRESS STARTS HERE -->
            <div class="col-md-12">
                <div class="show-hide-payment" id="ShowBillingAddress">
                    <input type="hidden" id="addedCreditCard" />
                    <input type="hidden" id="billingAddress_ExternalId"/>
                    <div class="form-group">
                        <label for="billingAddress_Name">@billingNameLabel</label>
                        <input type="text" class="form-control" id="billingAddress_Name" placeholder="@billingNameLabel" disabled>
                    </div>
                    <div class="form-group">
                        <label for="billingAddress_Address1">@addressLabel</label>
                        <input type="text" class="form-control" id="billingAddress_Address1" placeholder="@addressLabel" disabled>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="billingAddress_City">@cityLabel</label>
                                <input type="text" class="form-control" id="billingAddress_City" placeholder="@cityLabel" disabled>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="billingAddress_ZipPostalCode">@zipCodeLabel</label>
                                <input type="text" class="form-control" id="billingAddress_ZipPostalCode" placeholder="@zipCodeLabel" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="billingAddress_Country">@countryLabel</label>
                                <select id="billingAddress_Country" class="form-control" data-bind="options: countries, optionsText:'country', optionsValue:'code'" disabled></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="billingAddress_State">@stateLabel</label>
                                <!-- ko if: states == 'undefined' -->
                                <select id="billingAddress_State" class="form-control" data-bind="options: states, optionsText:'name', optionsValue:'code'" disabled></select>
                                <!-- /ko -->
                                <!-- ko if: states != 'undefined' -->
                                <input type="text" class="form-control" id="billingAddress_State" placeholder="@stateLabel" disabled>
                                <!-- /ko -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12" data-bind="visible:payGiftLoyaltyCard"><h3>@promocardsHeaderLabel</h3></div>
     <div class="col-md-12" data-bind="visible:payGiftCard">
        <div class="accordion-container">
            <!-- Accordion Start -->
            <a href="#" class="accordion-toggle"><span class="toggle-icon"><span class='glyphicon glyphicon-plus-sign'></span></span>@applyGiftLabel</a>
            <div class="accordion-content">
                <div class="col-md-12"><h4>@subtitleGiftLabel</h4></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="giftCardPayment_PaymentMethodID">@cardNumberLabel</label>
                        <input type="text" class="form-control" id="giftCardPayment_PaymentMethodID" placeholder="@cardNumberLabel">
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-info" id="giftCardPayment_GetBalance">@getBalanceButtonLabel</button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="giftCardPayment_Amount">@paymentAmountLabel</label>
                        <input type="number" class="form-control" id="giftCardPayment_Amount" placeholder="@paymentAmountLabel">
                    </div>
                    <div class="form-group" style="text-align: right;">
                        <button type="button" class="btn btn-success" id="giftCardPayment_Button">@addGiftCardButtonLabel</button>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="giftcard-status" id="giftCardPayment_Status" style="display:none;">
                        <!-- Only appears if a card has been added -->
                        <p>
                            @giftCardLabel :
                        <span id="giftCardPayment_Number"></span>
                        <span> / </span>
                        <span id="giftCardPayment_AppliedAmount"></span>
                    </p>
                        <span class="delete">
                            <a href="#" id="removeGiftCard"><span class="glyphicon glyphicon-remove"></span>@removeLabel</a>
                        </span>
                        <input type="text" id="addedGiftCard" style="visibility:hidden; display:none;" />
                    </div>
                </div>
            </div>
        </div><!-- Accordion End -->
    </div>
    <div class="col-md-12" data-bind="visible:payLoyaltyCard">
        <div class="accordion-container">
            <!-- Accordion Start -->
            <a href="#" class="accordion-toggle"><span class="toggle-icon"><span class='glyphicon glyphicon-plus-sign'></span></span>@applyLoyaltyLabel</a>
            <div class="accordion-content">
                <div class="col-md-12"><h4>@subtitleLoyaltyLabel</h4></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="loyaltyCardPayment_PaymentMethodID">@cardNumberLabel</label>
                        <input type="text" class="form-control" id="loyaltyCardPayment_PaymentMethodID" placeholder="@cardNumberLabel">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="loyaltyCardPayment_Amount">@paymentAmountLabel</label>
                        <input type="number" class="form-control" id="loyaltyCardPayment_Amount" placeholder="@paymentAmountLabel">
                    </div>
                    <div class="form-group" style="text-align: right;">
                        <button type="button" class="btn btn-success" id="loyaltyCardPayment_Button">@addLoyaltyCardButtonLabel</button>
                    </div>
                </div>
                <div class="col-md-12" id="loyaltyCardPayment_Status" style="display: none;">
                    <div class="giftcard-status">
                        <!-- Only appears if a card has been added -->
                        <p>
                            @loyaltyCardLabel :
                            <span id="loyaltyCardPayment_Number"></span>
                            <span> / </span>
                            <span id="loyaltyCardPayment_AppliedAmount"></span>
                        </p>
                        <span class="delete">
                            <a href="#" id="removeLoyaltyCard"><span class="glyphicon glyphicon-remove"></span> @removeLabel</a>
                        </span>
                        <input type="text" id="addedLoyaltyCard" style="visibility:hidden; display:none;" />
                    </div>
                </div>
            </div>
        </div><!-- Accordion End -->
    </div>
    <!-- ORDER TOTAL -->
    <div id="billingSummary" class="col-md-6">
        <div class="col-md-12"><h3>@paymentInfoHeaderLabel</h3></div>
        <div class="col-md-12 summary">
            <span class="text">@giftCardLabel: <span id="billingGiftCardNumber"></span></span>
            <span class="amount" id="billingGiftCardAmount"></span>
        </div>
        <div class="col-md-12 summary">
            <span class="text">@loyaltyCardLabel: <span id="billingLoyaltyCardNumber"></span></span>
            <span class="amount" id="billingLoyaltyCardAmount"></span>
        </div>
        <div class="col-md-12 summary">
            <span class="text">@creditCardLabel: <span id="billingCreditCardNumber"></span></span>
            <span class="amount" id="billingCreditCardAmount"></span>
        </div>
        <div class="col-md-12 summary">
            <span class="text">@paymentTotalLabel :</span>
            <span class="amount" id="paymentTotal"></span>
        </div>
    </div>
    <div id="billingSummary" class="col-md-6">
        <div class="col-md-12"><h3>@orderInformationLabel</h3></div>
        <div class="col-md-12 summary">
            <span class="text">@subtotalLabel:</span>
            <span class="amount" id="billingSubTotal" data-bind="text:lineItemListViewModel.subTotal"></span>
        </div>
        <div class="col-md-12 summary">
            <span class="text">@shippingCostLabel: <span id="billingShippingCostLabel"></span></span>
            <span class="amount" id="billingShippingCost" data-bind="text:shippingCost.shippingTotal"></span>
        </div>
        <div class="col-md-12 summary">
            <span class="text">@taxesLabel :</span>
            <span class="amount" id="billingTaxTotal" data-bind="text:shippingCost.taxTotal"></span>
        </div>
        <div class="col-md-12 summary">
            <span class="text">@savingsLabel :</span>
            <span class="amount" id="billingDiscount" data-bind="text: shippingCost.discount"></span>
        </div>
        <div class="col-md-12 summary">
            <span class="text">@totalLabel :</span>
            <span class="amount" id="billingOrderTotal" data-bind="text:shippingCost.total"></span>
        </div>
    </div>
    </div>

<script type="text/javascript">
    InitBillingPage();
</script>