@using Sitecore.Commerce.Storefront.Managers;
@{
    var continueShoppingLabel = Html.Sitecore().Field("PrevButtonLabel", Html.Sitecore().CurrentItem.Children["Delivery"]);
    var backToDelivery = Html.Sitecore().Field("PrevButtonLabel", Html.Sitecore().CurrentItem.Children["Billing"]);
    var backToBilling = Html.Sitecore().Field("PrevButtonLabel", Html.Sitecore().CurrentItem.Children["Confirm"]);
    
    var toBillingLabel = Html.Sitecore().Field("NextButtonLabel", Html.Sitecore().CurrentItem.Children["Delivery"]);
    var toConfirmLabel = Html.Sitecore().Field("NextButtonLabel", Html.Sitecore().CurrentItem.Children["Billing"]);
    var placeOrderLabel = Html.Sitecore().Field("NextButtonLabel", Html.Sitecore().CurrentItem.Children["Confirm"]);
    
}
<div class="container">
    <div class="row">
        <div id="btn-delivery-prev" class="col-md-6 col-sm-6 col-xs-6 chk-prev" style="display:none;"><a class="btn btn-info" href="@StorefrontManager.StorefrontHome">@continueShoppingLabel</a></div>
        <div id="btn-billing-prev" class="col-md-6 col-sm-6 col-xs-6 chk-prev" style="display:none;"><button id="BackToDeliveryButton" data-loading-text="Processing..." onclick="switchingCheckoutStep('shipping')" class=" btn btn-info">@backToDelivery</button></div>
        <div id="btn-confirm-prev" class="col-md-6 col-sm-6 col-xs-6 chk-prev" style="display:none;"><button id="BackToBillingButton" data-loading-text="Processing..." onclick="switchingCheckoutStep('billing')" class=" btn btn-info">@backToBilling</button></div>
        <div id="btn-delivery-next" class="col-md-6 col-sm-6 col-xs-6 chk-next" style="display:none;"><button id="ToBillingButton" data-loading-text="Processing..." onclick="switchingCheckoutStep('billing')" class=" btn btn-success" disabled>@toBillingLabel</button></div>
        <div id="btn-billing-next" class="col-md-6 col-sm-6 col-xs-6 chk-next" style="display:none;"><button id="ToConfirmButton" data-loading-text="Processing..." onclick="switchingCheckoutStep('confirm')" class=" btn btn-success" disabled>@toConfirmLabel</button></div>
        <div id="btn-confirm-next" class="col-md-6 col-sm-6 col-xs-6 chk-next" style="display:none;"><button id="PlaceOrderButton" data-loading-text="Processing..." onclick="submitOrder()" class=" btn btn-success" disabled>@placeOrderLabel</button></div>
    </div>
</div>
