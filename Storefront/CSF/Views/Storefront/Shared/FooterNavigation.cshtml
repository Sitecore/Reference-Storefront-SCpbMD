@model RenderingModel
<div id="B07-FooterNavigation" class="row">
    <div class="col-md-3 col-sm-3">
        <div class="links">
            @{
                Sitecore.Data.Fields.LookupField leftLinkField = Model.Item.Fields["QuickLinks Left"];
                if (leftLinkField != null && leftLinkField.TargetItem != null)
                {
                    Sitecore.Data.Fields.MultilistField leftLinksField = leftLinkField.TargetItem.Fields["QuickLinks"];
                    Item[] leftLinks = leftLinksField != null ? leftLinksField.GetItems() : new Item[0];

                    <h4>@Model.Item["QuickLinks Left Title"]</h4>
                    <ul class="footer-lists">
                        @foreach (var item in leftLinks)
                        {
                            <li>@Html.Sitecore().Field("Link", item, new { text = Html.Sitecore().Field("Text", item) })</li>
                        }
                    </ul>
                }
            }
        </div>
    </div>
